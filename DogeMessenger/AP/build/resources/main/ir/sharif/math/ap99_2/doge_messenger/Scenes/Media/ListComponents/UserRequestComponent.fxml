<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseClicked="#view" prefHeight="67.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listComponents.userRequestPreview.UserRequestController">
   <children>
      <Circle fx:id="profileImageView" fill="DODGERBLUE" layoutX="44.0" layoutY="34.0" radius="30.0" stroke="BLACK" strokeType="INSIDE" />
      <HBox layoutX="74.0" layoutY="34.0" prefHeight="25.0" prefWidth="200.0">
         <children>
            <Label fx:id="nameLabel" text="Name">
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="lastnameLabel" text="LastName">
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
      <Label fx:id="usernameLabel" layoutX="79.0" layoutY="14.0" prefHeight="20.0" prefWidth="100.0" text="Username">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="307.0" layoutY="22.0" mnemonicParsing="false" onAction="#accept" style="-fx-background-color: Lime; -fx-background-radius: 10;" text="Accept" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="398.0" layoutY="21.0" mnemonicParsing="false" onAction="#hDecline" style="-fx-background-color: Orange; -fx-background-radius: 10;" text="HDecline" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="500.0" layoutY="22.0" mnemonicParsing="false" onAction="#decline" style="-fx-background-color: RED; -fx-background-radius: 10;" text="Decline" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
