<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="FileAppender" fileName="./src/main/resources/logs" immediateFlush="true" append="false">
            <PatternLayout pattern="%-5level %d{yyy-MM-dd HH:mm:ss.SSS} [%M] [%L] %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
